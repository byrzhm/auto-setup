{
    "vim.leader": "<space>",
    "vim.smartRelativeLine": true,
    "vim.history": 20,
    "vim.easymotion": true,
    "vim.useSystemClipboard": false,
    "vim.incsearch": true,
    "vim.scroll": 0,
    "vim.normalModeKeyBindings": [
        { // format document üìù
            "before": [
                "Q"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        { // rename element üîÑ
            "before": [
                "leader",
                "r"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        { // replace string
            "before": [
                "leader",
                "s"
            ],
            "commands": [
                "editor.action.startFindReplaceAction"
            ]
        },
        { // copy to system clipboard
            "before": [
                "leader",
                "y"
            ],
            "after": ["\"", "+", "y"]
        },
        { // copy to system clipboard
            "before": [
                "leader",
                "Y"
            ],
            "after": ["\"", "+", "Y"]
        },
        { // select all 
            "before": [
                "<C-a>"
            ],
            "after": ["g", "g", "V", "G"]
        },
        { // go to next error or warning ‚ö†Ô∏è‚ÄºÔ∏è
            "before": [
                "<C-k>"
            ],
            "commands": [
                "editor.action.marker.nextInFiles"
            ]
        },
        { // go to prev error or warning ‚ö†Ô∏è‚ÄºÔ∏è
            "before": [
                "<C-j>"
            ],
            "commands": [
                "editor.action.marker.prevInFiles"
            ]
        },
        { // go back ‚û°Ô∏è
            "before": [
                "leader",
                "q"
            ],
            "commands": [
                "workbench.action.navigateBack"
            ]
        },
        { // go forward ‚¨ÖÔ∏è
            "before": [
                "leader",
                "e"
            ],
            "commands": [
                "workbench.action.navigateForward"
            ]
        },
        { // fold üìÅ
            "before": [
                "leader",
                "["
            ],
            "commands": [
                "editor.fold"
            ]
        },
        { // unfold üìÇ
            "before": [
                "leader",
                "]"
            ],
            "commands": [
                "editor.unfold"
            ]
        },
        { // fold all üìÅ
            "before": [
                "leader",
                "{"
            ],
            "commands": [
                "editor.foldAll"
            ]
        },
        { // unfold all üìÇ
            "before": [
                "leader",
                "}"
            ],
            "commands": [
                "editor.unfoldAll"
            ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { // easymotion: search n-character üòé
            "before": [
                "leader",
                "f"
            ],
            "after": [
                "leader",
                "leader",
                "/"
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            // paste in insert mode
            "before": [
                "<C-v>"
            ],
            "after": [
                "Esc",
                "p"
            ]
        },
        {
            // select all
            "before": [
                "<C-a>"
            ],
            "after": [
                "Esc",
                "g",
                "g",
                "V",
                "G"
            ]
        }
    ],
    "vim.insertModeKeyBindingsNonRecursive": [],
    "vim.commandLineModeKeyBindings": [],
    "vim.commandLineModeKeyBindingsNonRecursive": [],
    "vim.operatorPendingModeKeyBindings": [
        {
            // yL dL üëâ y$ d$
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        },
        {
            // yH dH üëâ y^ d^ 
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        }
    ],
    "vim.operatorPendingModeKeyBindingsNonRecursive": [],
    "vim.visualModeKeyBindings": [
        {
            // indent lines at visual mode
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            // outdent lines at visual mode
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            // copy in visual mode
            "before": [
                "<C-c>"
            ],
            "after": [
                "y"
            ]
        },
        { // copy to system clipboard
            "before": [
                "leader",
                "y"
            ],
            "after": ["\"", "+", "y"]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [],
    "vim.handleKeys": {
        // handle by vim
        "<C-d>": true,
        "<C-v>": true,
        "<C-c>": true,
        "<C-a>": true,

        // use these
        "<C-s>": false,
        "<C-z>": false,
        "<C-p>": false
    }
}
